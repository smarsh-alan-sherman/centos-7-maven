<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<pluginGroups>
	</pluginGroups>

	<proxies>
	</proxies>

	<servers>
		<server>
			<id>archiva</id>
			<username>jenkins</username>
			<password>jenkins1</password>
		</server>
	</servers>

	<mirrors>
		<mirror>
			<id>archiva</id>
			<mirrorOf>*</mirrorOf>
			<name>smarsh internal mirror</name>
			<url>http://beacon-archiva.default.svc.cluster.local:8080/repository/smarsh</url>
		</mirror>
	</mirrors>

	<profiles>
		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>
				<repository>
					<id>releases.repository</id>
					<name>Archiva Managed Internal Repository</name>
					<url>http://beacon-archiva.default.svc.cluster.local/repository/internal/</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>snapshots.repository</id>
					<name>Archiva Managed Internal Repository</name>
					<url>http://beacon-archiva.default.svc.cluster.local/repository/snapshots/</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
	</profiles>
</settings>
